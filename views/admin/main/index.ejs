<%- include('../playout/header.ejs') %>

<!-- END TOPBAR -->
<!-- START CONTAINER -->
<div class="page-container row-fluid container-fluid">
    <!-- SIDEBAR - START -->
   
    <%- include('../playout/menu.ejs') %>



    <!--  SIDEBAR - END -->
    <!-- START CONTENT -->
    <section id="main-content" class=" ">
        <section class="wrapper main-wrapper row" >
            <div class='col-xs-12'>
                <div class="page-title">
                    <div class="pull-left">
                        <h1 class="title">Thống kê</h1>
                        
                    </div>
                </div>
            </div>
            <div class="clearfix"></div>
           
            <div class="clearfix"></div>
            <div class="col-lg-12">
                <section class="box nobox marginBottom0">
                    <div class="content-body">
                        <div class="row">
                            
                            <div class="col-md-3 col-sm-6 col-xs-12">
                                <div class="r4_counter db_box">
                                    <i class='pull-left fa fa-shopping-cart icon-md icon-rounded icon-accent'></i>
                                    <div class="stats">
                                        <h4><strong><%= orderCount%></strong></h4>
                                        <span>Số đơn</span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3 col-sm-6 col-xs-12">
                                <div class="r4_counter db_box">
                                    <i class='pull-left fa fa-dollar icon-md icon-rounded icon-purple'></i>
                                    <div class="stats">
                                        <h4><strong><%=tong %> $</strong></h4>
                                        <span>Doanh thu</span>
                                    </div>
                                </div>
                            </div>
                            
                        </div>
                        <!-- End .row -->    
                    </div>
                </section>
            </div>
            <div class="col-xs-12">
                <section class="box ">
                    <header class="panel_header">
                        <h2 class="title pull-left">Visitor's Statistics</h2>
                        <div class="actions panel_actions pull-right">
                            <a class="box_toggle fa fa-chevron-down"></a>
                            <a class="box_setting fa fa-cog" data-toggle="modal" href="#section-settings"></a>
                            <a class="box_close fa fa-times"></a>
                        </div>
                    </header>
                    <div class="content-body">
                        <div class="row">
                            <div class="col-xs-12">
                                <div class="wid-vectormap">
                                    <div class="row">
                                        <div class="col-xs-12 col-sm-9">
                                            <figure>
                                                <div id="db-world-map-markers" style="width: 100%; height: 300px"></div>
                                            </figure>
                                        </div>
                                        <div class="map_progress col-xs-12 col-sm-3">
                                            <span class='text-muted'><small>Doanh thu tháng <%= targetMonth%> : <%= doanhthulast%></small></span>
                                            <div class="progress">
                                                <div class="progress-bar progress-bar-primary" role="progressbar" aria-valuenow="<%= doanhthulast%>" aria-valuemin="0" aria-valuemax="100" style="width: <%= doanhthulast/10%>%"></div>
                                            </div>
                                            <br>
                                            
                                            <span class='text-muted'><small>Doanh thu tháng <%= thangnay%> : <%= doanhthunow%> </small></span>
                                            <div class="progress">
                                                <div class="progress-bar progress-bar-primary" role="progressbar" aria-valuenow="<%= doanhthunow%>" aria-valuemin="0" aria-valuemax="100" style="width: <%= doanhthunow/10%>%"></div>
                                            </div>
                                            <br>
                                            
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- End .row -->
                    </div>
                </section>
            </div>
        </section>
    </section>
    <!-- END CONTENT -->
    <div class="chatapi-windows ">
    </div>
    <%- include('../playout/footer.ejs') %>
