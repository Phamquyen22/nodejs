<%- include('../playout/header.ejs') %>
        <!-- END TOPBAR -->
        <!-- START CONTAINER -->
        <div class="page-container row-fluid container-fluid">
            <!-- SIDEBAR - START -->
           
            <%- include('../playout/menu.ejs') %>


            <!--  SIDEBAR - END -->
            <!-- START CONTENT -->
            <section id="main-content" class=" ">
            <section class="wrapper main-wrapper row" style=''>
                <div class='col-xs-12'>
                    <div class="page-title">
                        <div class="pull-left">
                            <h1 class="title">Add Sản Phẩm</h1>
                        </div>
                        <div class="pull-right hidden-xs">
                            
                        </div>
                    </div>
                </div>
                <div class="clearfix"></div>
                <div class="col-xs-12">
                    <section class="box ">
                        <header class="panel_header">
                            <h2 class="title pull-left">Thông Tin</h2>
                            <div class="actions panel_actions pull-right">
                                <a class="box_toggle fa fa-chevron-down"></a>
                                
                                <a class="box_close fa fa-times"></a>
                            </div>
                        </header>
                        <div class="content-body">
                            <div class="row">
                                <% if(success_msg != ''){ %> 
                                    <div class="alert alert-success"><%= success_msg%></div>
                               <% } %>
                                <% if(errors) { %>
                                <div class="alert alert-danger">
                                    <% errors.forEach(function(e){ %>

                                        <%= e.msg %> <br/>
                                    <%});%>

                                </div>
                                <% };%>
                                <form action ="" method="post" enctype="multipart/form-data" >
                                    <div class="col-xs-12 col-sm-9 col-md-8 padding-bottom-30">
                                        <div class="form-group">
                                            <label class="form-label" for="field-120334">Tên sản phẩm</label>
                                            <span class="desc"></span>
                                            <div class="controls">
                                                <input type="text" id="Name" value="" class="form-control" name="Name">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-xs-12 col-sm-9 col-md-8 padding-bottom-30">
                                        <div class="form-group">
                                            <label class="form-label" for="field-120334">miêu tả sản phẩm</label>
                                            <span class="desc"></span>
                                            <div class="controls">
                                                <input type="text" id="description" value="" class="form-control" name="description">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-xs-12 col-sm-9 col-md-8 padding-bottom-30">
                                        <div class="form-group">
                                            <label class="form-label" for="field-120334">Số lượng</label>
                                            <span class="desc"></span>
                                            <div class="controls">
                                                <input type="text" id="stock" value="" class="form-control" name="stock">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-xs-12 col-sm-9 col-md-8 padding-bottom-30">
                                        <div class="form-group">
                                            <label class="form-label" for="field-120334">Giá bán</label>
                                            <span class="desc"></span>
                                            <div class="controls">
                                                <input type="number" id="price" value="0" min="0" class="form-control" name="price">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-xs-12 col-sm-9 col-md-8 padding-bottom-30">
                                        <div class="form-group">
                                            <label class="form-label" for="field-120334">Kích cỡ</label>
                                            <span class="desc"></span>
                                            <div class="controls">
                                                <input type="text" id="size" value="" class="form-control" name="size">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-xs-12 col-sm-9 col-md-8 padding-bottom-30">
                                        <div class="form-group">
                                            <label class="form-label" for="field-120334">Tình trạng sản phẩm</label>
                                            <span class="desc"></span>
                                            <div class="controls">
                                                <input type="text" id="productType" value="" class="form-control" name="productType">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-xs-12 col-sm-9 col-md-8 padding-bottom-30">
                                        <div class="form-group">
                                            <label class="form-label" for="field-120334">Màu sản phẩm </label>
                                            <span class="desc"></span>
                                            <div class="controls">
                                                <input type="text" id="color" value="" class="form-control" name="color">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-xs-12 col-sm-9 col-md-8 padding-bottom-30">
                                        <div class="form-group">
                                            <label class="form-label" for="field-120334">Kiểu </label>
                                            <span class="desc"></span>
                                            <div class="controls">
                                                <input type="text" id="pattern" value="" class="form-control" name="pattern">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-xs-12 col-sm-9 col-md-8 padding-bottom-30">
                                        <div class="form-group">
                                            <label class="form-label" for="field-120334">Nhãn</label>
                                            <span class="desc"></span>
                                            <div class="controls">
                                                <input type="text" id="tags" value="" class="form-control" name="tags">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-xs-12 col-sm-9 col-md-8 padding-bottom-30">
                                        <div class="form-group">
                                            <label class="form-label" for="field-120334">Hình</label>
                                            <span class="desc"></span>
                                            <div class="controls">
                                                <input type="file" id="images" value="" required="required" class="form-control" name="images">
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <div class="col-xs-12 col-sm-9 col-md-8 padding-bottom-30">
                                        <div class="form-group">
                                            <label class="form-label" for="field-120334">Chất liệu</label>
                                            <span class="desc"></span>
                                            <div class="controls">
                                                <input type="text" id="materials" value="" class="form-control" name="materials">
                                            </div>
                                        </div>
                                    </div>
                                    

                                    <div class="col-xs-12 col-sm-9 col-md-8 padding-bottom-30">
                                        <div class="text-left">
                                            <button type="submit" class="btn btn-primary">Save</button>
                                            <button type="button" class="btn">Cancel</button>
                                        </div>
                                    </div>
                                </form>
                                </div>
                            </div>
                    </section>
                    </div>
            </section>
        </section>
            <!-- END CONTENT -->
            <div class="chatapi-windows ">
            </div>
            <%- include('../playout/footer.ejs') %>